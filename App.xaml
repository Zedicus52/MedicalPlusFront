<Application x:Class="MedicalPlusFront.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:viewModels="clr-namespace:MedicalPlusFront.ViewModel"
             xmlns:views="clr-namespace:MedicalPlusFront.View"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/AuthWindowStyles.xaml"/>
                <ResourceDictionary Source="Styles/DefaultStyles.xaml"/>
                <ResourceDictionary Source="Styles/ComponentStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModels:LoginPageVM}">
                <views:AuthComponent></views:AuthComponent>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:MainMenuVM}">
                <views:MainMenuComponent></views:MainMenuComponent>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:CreateEmployeeVM}">
                <views:CreateEmployeeCard></views:CreateEmployeeCard>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:FindUserVM}">
                <views:FindUserCard></views:FindUserCard>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
