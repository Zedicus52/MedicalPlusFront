<UserControl x:Class="MedicalPlusFront.View.Component"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedicalPlusFront.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <Border CornerRadius="6" BorderBrush="#575176" Background="#B7D5E0" BorderThickness="2" DockPanel.Dock="Top" Height="200" Width="200">
                <StackPanel Orientation="Vertical">
                    <Image x:Name="ImgMember" Style="{StaticResource UsersImg}"/>
                    <Button x:Name="BtnMember" Style="{StaticResource MemberButton}" Template="{StaticResource DefaultButton}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
